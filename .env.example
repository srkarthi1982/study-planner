# Local (SQLite)
ASTRO_DB_REMOTE_URL=file:.astro/content.db

# Production (Turso/libSQL) - uncomment when deploying
# ASTRO_DB_REMOTE_URL=libsql://your-db-host.turso.io
# ASTRO_DB_APP_TOKEN=your-app-token
# If Astro Studio is used, set this too:
# ASTRO_STUDIO_APP_TOKEN=your-studio-token

# Core app routing (required in production)
ANSIVERSA_COOKIE_DOMAIN=ansiversa.com
PUBLIC_ROOT_APP_URL=https://ansiversa.com

# Auth/session secrets (required in production)
ANSIVERSA_SESSION_SECRET=your-session-secret
# ANSIVERSA_AUTH_SECRET=your-auth-secret

# Parent integrations (required in production)
ANSIVERSA_PARENT_BASE_URL=https://ansiversa.com
ANSIVERSA_DASHBOARD_WEBHOOK_URL=https://ansiversa.com/api/webhooks/study-planner-activity.json
ANSIVERSA_DASHBOARD_WEBHOOK_SECRET=your-dashboard-webhook-secret
# Optional notification webhook override
# ANSIVERSA_NOTIFICATIONS_WEBHOOK_URL=https://ansiversa.com/api/webhooks/notifications.json
# ANSIVERSA_NOTIFICATIONS_WEBHOOK_SECRET=your-notifications-webhook-secret

# Dev helpers (optional)
DEV_BYPASS_AUTH=true
DEV_BYPASS_USER_ID=dev-user
DEV_BYPASS_EMAIL=dev@local
DEV_BYPASS_ROLE_ID=1
